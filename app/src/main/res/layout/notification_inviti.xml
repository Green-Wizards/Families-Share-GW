<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    style="@android:style/Widget.ActionButton">

    <ImageView
        android:id="@+id/Iconanotifiche"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_margin="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="614dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_notifiche_inviti" />

    <androidx.cardview.widget.CardView
        android:id="@+id/container_notifiche"
        android:layout_width="12dp"
        android:layout_height="13dp"
        app:cardBackgroundColor="#CA0B0B"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="@+id/Iconanotifiche"
        app:layout_constraintTop_toTopOf="@+id/Iconanotifiche">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="8dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>